<div class="component">
  <div class="toy-info">
    <%= @toy.photo_url %>
    <%# cl_image_tag @toy.photo.key, height: 300, width: 400, crop: :fill %>
    <% if false %>
    <div class="card-category card-large" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= @list.photo.attached? ? cl_image_path(@list.photo.key) : asset_path('list_background.jpg') %>)">
    <% end %>
    <div class="show-title">
      <h1><%= @toy.name %></h1>
      <p>Location<%# @user_id.location %></p>
      <p>★★★<%# @toy.rating %></p>
    </div>
    <div class="border-bottom"></div>

  <h3>Description:</h3>
  <%= @toy.description %>

  <h3>Category:</h3>
  <%= @toy.category %>

  <h3>Condition:</h3>
  <%= @toy.condition %>

  <h2>$<%= @toy.price %></h2>
  <h2><%= link_to 'Book Now', new_toy_booking_path(@toy) %></h2>
</div>
