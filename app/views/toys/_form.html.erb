<%= simple_form_for @toy do |f| %>
  <%= f.input :name, placeholder: 'Teddy bear', label: "Name" %>
  <%= f.input :description, placeholder: 'This is a cute Teddy bear!', label: "Description" %>
  <%= f.input :category, placeholder: 'Soft Toy', label: "Category" %>
  <%= f.input :condition, collection: Toy.conditions, label: "Condition" %>
  <%= f.submit class: 'btn btn-ghost' %>
<% end %>
